<UserControl
    x:Class="Woohoo.Audio.Player.Tui.Views.MainControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Woohoo.Audio.Player.Tui.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Woohoo.Audio.Player.Tui.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:services="using:Woohoo.Audio.Player.Tui.Services"
    xmlns:vm="clr-namespace:Woohoo.Audio.Player.Tui.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="vm:MainViewModel"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <converters:IsEqualConverter x:Key="IsEqualConverter" />
            <converters:PositionToLabelConverter x:Key="PositionToLabelConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File" IsTabStop="False">
                <MenuItem
                    Command="{Binding Path=BrowseCommand, Mode=OneWay}"
                    Header="_Open..."
                    HotKey="{OnPlatform Ctrl+O,
                                        macOS=⌘+O}"
                    InputGesture="{OnPlatform Ctrl+O,
                                              macOS=⌘+O}" />
                <Separator />
                <MenuItem
                    Click="OnExit"
                    Header="E_xit"
                    HotKey="{OnPlatform Ctrl+Q,
                                        macOS=⌘+Q}"
                    InputGesture="{OnPlatform Ctrl+Q,
                                              macOS=⌘+Q}" />
            </MenuItem>
            <MenuItem Header="_Theme" IsTabStop="False">
                <MenuItem
                    Command="{Binding SelectThemeCommand, Mode=OneWay}"
                    CommandParameter="{x:Static services:KnownThemes.ModernDark}"
                    Header="Modern _Dark"
                    IsChecked="{Binding SelectedTheme, Converter={StaticResource IsEqualConverter}, ConverterParameter={x:Static services:KnownThemes.ModernDark}}" />
                <MenuItem
                    Command="{Binding SelectThemeCommand, Mode=OneWay}"
                    CommandParameter="{x:Static services:KnownThemes.ModernLight}"
                    Header="Modern _Light"
                    IsChecked="{Binding SelectedTheme, Converter={StaticResource IsEqualConverter}, ConverterParameter={x:Static services:KnownThemes.ModernLight}}" />
                <MenuItem
                    Command="{Binding SelectThemeCommand, Mode=OneWay}"
                    CommandParameter="{x:Static services:KnownThemes.ModernContrast}"
                    Header="Modern Contr_ast"
                    IsChecked="{Binding SelectedTheme, Converter={StaticResource IsEqualConverter}, ConverterParameter={x:Static services:KnownThemes.ModernContrast}}" />
                <MenuItem
                    Command="{Binding SelectThemeCommand, Mode=OneWay}"
                    CommandParameter="{x:Static services:KnownThemes.TurboVision}"
                    Header="_TurboVision"
                    IsChecked="{Binding SelectedTheme, Converter={StaticResource IsEqualConverter}, ConverterParameter={x:Static services:KnownThemes.TurboVision}}" />
                <MenuItem
                    Command="{Binding SelectThemeCommand, Mode=OneWay}"
                    CommandParameter="{x:Static services:KnownThemes.TurboVisionCompatible}"
                    Header="TurboVision _Compatible"
                    IsChecked="{Binding SelectedTheme, Converter={StaticResource IsEqualConverter}, ConverterParameter={x:Static services:KnownThemes.TurboVisionCompatible}}" />
                <MenuItem
                    Command="{Binding SelectThemeCommand, Mode=OneWay}"
                    CommandParameter="{x:Static services:KnownThemes.TurboVisionGray}"
                    Header="TurboVision _Gray"
                    IsChecked="{Binding SelectedTheme, Converter={StaticResource IsEqualConverter}, ConverterParameter={x:Static services:KnownThemes.TurboVisionGray}}" />
                <MenuItem
                    Command="{Binding SelectThemeCommand, Mode=OneWay}"
                    CommandParameter="{x:Static services:KnownThemes.TurboVisionElegant}"
                    Header="TurboVision _Elegant"
                    IsChecked="{Binding SelectedTheme, Converter={StaticResource IsEqualConverter}, ConverterParameter={x:Static services:KnownThemes.TurboVisionElegant}}" />
            </MenuItem>
            <MenuItem Header="_View" IsTabStop="False">
                <MenuItem
                    Command="{Binding SelectViewCommand, Mode=OneWay}"
                    CommandParameter="{x:Static services:KnownViews.About}"
                    Header="_About"
                    HotKey="F1"
                    InputGesture="F1"
                    IsChecked="{Binding SelectedView, Converter={StaticResource IsEqualConverter}, ConverterParameter={x:Static services:KnownViews.About}}" />
                <MenuItem
                    Command="{Binding SelectViewCommand, Mode=OneWay}"
                    CommandParameter="{x:Static services:KnownViews.NowPlaying}"
                    Header="_Now Playing"
                    HotKey="F2"
                    InputGesture="F2"
                    IsChecked="{Binding SelectedView, Converter={StaticResource IsEqualConverter}, ConverterParameter={x:Static services:KnownViews.NowPlaying}}" />
                <MenuItem
                    Command="{Binding SelectViewCommand, Mode=OneWay}"
                    CommandParameter="{x:Static services:KnownViews.Playlist}"
                    Header="_Playlist"
                    HotKey="F3"
                    InputGesture="F3"
                    IsChecked="{Binding SelectedView, Converter={StaticResource IsEqualConverter}, ConverterParameter={x:Static services:KnownViews.Playlist}}" />
                <MenuItem
                    Command="{Binding SelectViewCommand, Mode=OneWay}"
                    CommandParameter="{x:Static services:KnownViews.Lyrics}"
                    Header="_Lyrics"
                    HotKey="F4"
                    InputGesture="F4"
                    IsChecked="{Binding SelectedView, Converter={StaticResource IsEqualConverter}, ConverterParameter={x:Static services:KnownViews.Lyrics}}" />
            </MenuItem>
            <MenuItem Header="_Playback" IsTabStop="False">
                <MenuItem
                    Command="{Binding PlayPauseCommand, Mode=OneWay}"
                    Header="Play / Pause"
                    HotKey="{OnPlatform Ctrl+Space,
                                        macOS=⌘+Space}"
                    InputGesture="{OnPlatform Ctrl+Space,
                                              macOS=⌘+Space}" />
                <Separator />
                <MenuItem
                    Command="{Binding PlayPreviousTrackCommand, Mode=OneWay}"
                    Header="Previous Track"
                    HotKey="{OnPlatform Ctrl+P,
                                        macOS=⌘+P}"
                    InputGesture="{OnPlatform Ctrl+P,
                                              macOS=⌘+P}" />
                <MenuItem
                    Command="{Binding PlayNextTrackCommand, Mode=OneWay}"
                    Header="Next Track"
                    HotKey="{OnPlatform Ctrl+N,
                                        macOS=⌘+N}"
                    InputGesture="{OnPlatform Ctrl+N,
                                              macOS=⌘+N}" />
                <Separator />
                <MenuItem Command="{Binding SkipBackCommand, Mode=OneWay}" Header="Skip Back 15s" />
                <MenuItem Command="{Binding SkipForwardCommand, Mode=OneWay}" Header="Skip Forward 15s" />
            </MenuItem>
            <MenuItem Header="_Volume" IsTabStop="False">
                <MenuItem
                    Command="{Binding MuteCommand, Mode=OneWay}"
                    Header="_Mute"
                    HotKey="{OnPlatform Ctrl+M,
                                        macOS=⌘+M}"
                    InputGesture="{OnPlatform Ctrl+M,
                                              macOS=⌘+M}"
                    IsChecked="{Binding IsMuted, Mode=OneWay}" />
                <Separator />
                <MenuItem
                    Command="{Binding VolumeUpCommand, Mode=OneWay}"
                    Header="Volume _Up"
                    HotKey="{OnPlatform Ctrl++,
                                        macOS=⌘++}"
                    InputGesture="{OnPlatform Ctrl++,
                                              macOS=⌘++}" />
                <MenuItem
                    Command="{Binding VolumeDownCommand, Mode=OneWay}"
                    Header="Volume _Down"
                    HotKey="{OnPlatform Ctrl+-,
                                        macOS=⌘+-}"
                    InputGesture="{OnPlatform Ctrl+-,
                                              macOS=⌘+-}" />
            </MenuItem>
            <MenuItem Header="_Settings" IsTabStop="False">
                <MenuItem
                    Command="{Binding ToggleFetchOnlineMetadataCommand}"
                    Header="Fetch Online _Metadata"
                    IsChecked="{Binding FetchOnlineMetadata}" />
                <MenuItem
                    Command="{Binding ToggleFetchLyricsCommand}"
                    Header="Fetch _Lyrics"
                    IsChecked="{Binding FetchLyrics}"
                    ToggleType="CheckBox" />
            </MenuItem>
        </Menu>

        <Grid
            Margin="1,0"
            ColumnDefinitions="Auto,*,Auto"
            DockPanel.Dock="Bottom"
            IsVisible="{Binding !IsTipVisible}">
            <TextBlock
                Grid.Column="0"
                MinWidth="5"
                Text="{Binding CurrentTrackPosition, Converter={StaticResource PositionToLabelConverter}}" />
            <ProgressBar
                Grid.Column="1"
                Height="1"
                Margin="2,0"
                Maximum="{Binding CurrentTrackEndPosition}"
                ShowProgressText="False"
                Value="{Binding CurrentTrackPosition}" />
            <TextBlock
                Grid.Column="2"
                MinWidth="5"
                Text="{Binding CurrentTrackEndPosition, Converter={StaticResource PositionToLabelConverter}}" />
        </Grid>

        <StackPanel
            HorizontalAlignment="Center"
            DockPanel.Dock="Bottom"
            Orientation="Horizontal">
            <TextBlock
                Margin="2,0"
                HorizontalAlignment="Center"
                Text="{Binding CurrentTrack.CurrentLyric}"
                TextWrapping="NoWrap" />
        </StackPanel>

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            DockPanel.Dock="Bottom"
            IsVisible="{Binding !IsTipVisible}"
            Orientation="Horizontal">
            <Button
                Margin="1"
                VerticalContentAlignment="Center"
                Command="{Binding SkipBackCommand, Mode=OneWay}"
                Content=" &lt;&lt; " />
            <Button
                Margin="1"
                VerticalContentAlignment="Center"
                Command="{Binding PlayPreviousTrackCommand, Mode=OneWay}"
                Content=" &lt; " />
            <Button
                Margin="1"
                VerticalContentAlignment="Center"
                Command="{Binding PlayPauseCommand, Mode=OneWay}"
                Content="{Binding PlayPauseCaption, Mode=OneWay}" />
            <Button
                Margin="1"
                VerticalContentAlignment="Center"
                Command="{Binding PlayNextTrackCommand, Mode=OneWay}"
                Content=" &gt; " />
            <Button
                Margin="1"
                VerticalContentAlignment="Center"
                Command="{Binding SkipForwardCommand, Mode=OneWay}"
                Content=" &gt;&gt; " />
            <Button
                Margin="1"
                VerticalContentAlignment="Center"
                Command="{Binding MuteCommand, Mode=OneWay}"
                Content="Mute" />
            <Button
                Margin="1"
                VerticalContentAlignment="Center"
                Command="{Binding VolumeDownCommand, Mode=OneWay}"
                Content=" Vol - " />
            <Button
                Margin="1"
                VerticalContentAlignment="Center"
                Command="{Binding VolumeUpCommand, Mode=OneWay}"
                Content=" Vol + " />
            <TextBlock
                MinWidth="5"
                Margin="1"
                VerticalAlignment="Top"
                IsVisible="{Binding !IsMuted, Mode=OneWay}"
                Text="{Binding Volume, StringFormat={}{0}%}" />
            <TextBlock
                MinWidth="5"
                Margin="1"
                VerticalAlignment="Top"
                IsVisible="{Binding IsMuted, Mode=OneWay}"
                Text="Muted" />
        </StackPanel>

        <Grid>
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsVisible="{Binding SelectedView, Converter={StaticResource IsEqualConverter}, ConverterParameter={x:Static services:KnownViews.About}}">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontFamily="fonts:Consolonia#Doom"
                    FontSize="8"
                    Text="Audio Player" />
                <TextBlock Margin="0,0,0,1" Text="by Hugues Valois" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,1,0" Text="App version:" />
                    <TextBlock Text="{Binding AboutInfo.AppVersion, Mode=OneTime}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,1,0" Text="Avalonia version:" />
                    <TextBlock Text="{Binding AboutInfo.AvaloniaVersion, Mode=OneTime}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,1,0" Text="Framework:" />
                    <TextBlock Text="{Binding AboutInfo.DotNetFramework, Mode=OneTime}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,1,0" Text="Process architecture:" />
                    <TextBlock Text="{Binding AboutInfo.ProcessArchitecture, Mode=OneTime}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,1,0" Text="Runtime identifier:" />
                    <TextBlock Text="{Binding AboutInfo.RuntimeIdentifier, Mode=OneTime}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,1,0" Text="Operating system:" />
                    <TextBlock Text="{Binding AboutInfo.OperatingSystem, Mode=OneTime}" />
                </StackPanel>
            </StackPanel>

            <ScrollViewer IsVisible="{Binding SelectedView, Converter={StaticResource IsEqualConverter}, ConverterParameter={x:Static services:KnownViews.NowPlaying}}" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsVisible="{Binding IsTipVisible}">
                        <TextBlock
                            Margin="1"
                            HorizontalAlignment="Center"
                            Text="Welcome to Audio Player!" />
                        <TextBlock
                            Margin="1"
                            HorizontalAlignment="Center"
                            Text="Open a cue file or a zip containing a cue file" />
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsVisible="{Binding !IsTipVisible}">
                        <TextBlock
                            Margin="1"
                            HorizontalAlignment="Center"
                            Text="{Binding AlbumPerformer}"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Margin="1"
                            HorizontalAlignment="Center"
                            Text="{Binding AlbumTitle}"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Margin="1"
                            HorizontalAlignment="Center"
                            Text="{Binding CurrentTrackTitle}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <ListBox
                DoubleTapped="ListBox_DoubleTapped"
                IsVisible="{Binding SelectedView, Converter={StaticResource IsEqualConverter}, ConverterParameter={x:Static services:KnownViews.Playlist}}"
                ItemsSource="{Binding Tracks}"
                SelectedItem="{Binding PlaylistSelectedTrack, Mode=TwoWay}">
                <ListBox.KeyBindings>
                    <KeyBinding Command="{Binding PlaySelectedTrackCommand}" Gesture="Enter" />
                </ListBox.KeyBindings>
                <ListBox.Styles>
                    <Style Selector="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListBox.Styles>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Background="Transparent" ColumnDefinitions="Auto,Auto,*,Auto">
                            <StackPanel
                                Grid.Column="0"
                                MinWidth="2"
                                Margin="0,0,1,0"
                                Orientation="Horizontal">
                                <TextBlock IsVisible="{Binding IsCurrentTrack}" Text="▶" />
                            </StackPanel>
                            <TextBlock
                                Grid.Column="1"
                                MinWidth="4"
                                Margin="0,0,1,0"
                                Text="{Binding TrackNumber, StringFormat={}{0:00}.}" />
                            <TextBlock Grid.Column="2" Text="{Binding Title}" />
                            <TextBlock
                                Grid.Column="3"
                                Margin="0,0,1,0"
                                HorizontalAlignment="Right"
                                Text="{Binding TrackSize, Converter={StaticResource PositionToLabelConverter}}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <ScrollViewer IsVisible="{Binding SelectedView, Converter={StaticResource IsEqualConverter}, ConverterParameter={x:Static services:KnownViews.Lyrics}}" VerticalScrollBarVisibility="Auto">
                <ItemsRepeater
                    VerticalAlignment="Center"
                    IsVisible="{Binding CurrentTrack.HasLyrics, Mode=OneWay}"
                    ItemsSource="{Binding CurrentTrack.Lyrics, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <StackLayout Orientation="Vertical" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.Styles>
                        <Style Selector="TextBlock.class1">
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="FontStyle" Value="Italic" />
                        </Style>
                        <Style Selector="TextBlock.class2" />
                    </ItemsRepeater.Styles>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="2,0"
                                HorizontalAlignment="Center"
                                Classes.class1="{Binding IsCurrent}"
                                Classes.class2="{Binding !IsCurrent}"
                                Text="{Binding Text, Mode=OneWay}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>
        </Grid>

    </DockPanel>
</UserControl>
